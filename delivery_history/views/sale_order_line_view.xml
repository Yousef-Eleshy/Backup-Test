<odoo>
  <data>
      <!-- Sale Order Line -->
      <record id="view_order_line_tree_inherit_2" model="ir.ui.view">
            <field name="name">sale.order.line.tree.inherit.button.delivery</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="egymentors_purchase_fx.view_order_line_tree_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='line_delivery_date']" position="after">
                    <button type="object"
                            name="action_view_delivered_per_line"
                            class="oe_stat_button btn-success"
                            string="Delivery History"
                            style="color:green;"
                            icon="fa-truck-moving"
                            attrs="{'invisible': [('line_delivery_date', '=', False)]}">
                    </button>
                </xpath>

            </field>
        </record>
  </data>
</odoo>